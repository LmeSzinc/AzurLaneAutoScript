{
  "extends": [
    "config:base",
    ":semanticCommits",
    ":semanticCommitTypeAll(deps)",
    ":semanticCommitScopeDisabled",
    ":automergeAll",
    ":automergeBranch",
    ":disableDependencyDashboard",
    ":pinVersions",
    ":onlyNpm",
    ":label(dependencies)"
  ],
  "packageRules": [
    {
      "groupName": "Vite packages",
      "matchUpdateTypes": "major",
      "matchSourceUrlPrefixes": [
        "https://github.com/vitejs/"
      ]
    }
  ],
  "gitNoVerify": [
    "commit",
    "push"
  ]
}
